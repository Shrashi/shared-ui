{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "auth",
  "projectType": "library",
  "root": "packages/auth",
  "sourceRoot": "packages/auth/src",
   "implicitDependencies": ["elements"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "configFile": "packages/auth/vite.config.js",
        "tsConfig": "packages/auth/tsconfig.lib.json"
      }
    },

    "release-branch": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
       "commands": [
  "nx build auth",
  "node packages/auth/scripts/prepare-dist.cjs",
  "git add packages/auth/dist -A",
  "git commit -m \"chore(auth): update dist for release\" --no-verify || echo \"no changes\"",
  "git subtree split --prefix packages/auth/dist -b auth-release",
  "git push -f origin auth-release:auth-release",
  "git branch -D auth-release || true"
]
      }
    },

    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "packages/auth/.storybook",
        "port": 6007
      }
    },

    "build-storybook": {
      "executor": "@nx/storybook:build",
      "options": {
        "configDir": "packages/auth/.storybook",
        "outputDir": "packages/auth/dist/storybook"
      }
    }
  },

  "assets": [
    { "input": "packages/auth", "glob": "README.md", "output": "." },
    { "input": "packages/auth", "glob": "LICENSE",   "output": "." }
  ],

  "release": {
    "version": {
      "manifestRootsToUpdate": ["{projectRoot}/dist"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },

  "targetsMetadata": {
    "nx-release-publish": {
      "options": {
        "packageRoot": "{projectRoot}/dist"
      }
    }
  }
}
